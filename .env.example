# Copy this file to .env and fill in your values.

# Password to access the downloader (required — change this!)
APP_PASSWORD=your_secret_password_here

# Flask session secret key — generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_me_to_a_random_string

# Where downloaded files are stored (relative or absolute path)
DOWNLOAD_DIR=./downloads

# Network settings
HOST=0.0.0.0
PORT=5000

# Set to "true" only during local development; never in production
FLASK_DEBUG=false
